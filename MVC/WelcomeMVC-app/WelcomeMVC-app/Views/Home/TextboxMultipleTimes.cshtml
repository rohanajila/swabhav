
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TextboxMultipleTimes</title>
</head>
<body>
    <div>
        <form>
            Enter Name: <input type="text" name="username" />
            <button type="submit">Submit</button>
        </form>
        <p>
            @for (int i = 0; i < 5; i++)
            {
                @("Hello " + ViewBag.username) <br />
            }
        </p>
    </div>
</body>
</html>
