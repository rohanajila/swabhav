@model TaskTableMVC_app.ViewModels.TasksVM
@{
    ViewBag.Title = "AddTask";
}

<h2>AddTask</h2>

<h2 align="center">Add New Task</h2>
<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label for="TaskDetails">Task Detail</label>
            @Html.TextBoxFor(x => x.TaskDetails, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
        </div>
        <div align="center">
            <button type="submit" class="btn btn-outline-primary">Add Task</button>
        </div>
        <div>
            @Html.ActionLink("Back", "Index", "Task")
        </div>
    }
</div>