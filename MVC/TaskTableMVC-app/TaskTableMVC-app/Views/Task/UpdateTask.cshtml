@model TaskTableMVC_app.ViewModels.UpdateTask
@{
    ViewBag.Title = "UpdateTask";
}

<h2>UpdateTask</h2>
<h2 align="center">Update Task</h2>
<div>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.Tasks.ID);
        <div class="form-group">
            <label for="TaskDetail">Task Detail</label>
            @Html.TextBoxFor(x => x.Tasks.TaskDetail, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            @Html.TextBoxFor(x => x.Tasks.Status, new { @class = "form-control" })
        </div>
        <div align="center">
            <button type="submit" class="btn btn-outline-primary">Update Task</button>
        </div>
        <div>
            @Html.ActionLink("Back", "Index", "Tasks")
        </div>
    }
</div>

