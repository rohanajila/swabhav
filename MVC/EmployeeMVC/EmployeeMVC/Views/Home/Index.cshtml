@model EmployeeMVC.ViewModels.EmployeeVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @using (Html.BeginForm("AddEmployee", "Home"))
    {
        <table cellpadding="10" align="center" border="1">
            <tr align="center">
                <td colspan="5">@Html.ActionLink("ADD Employee", "AddEmployee", "Home")</td>
            </tr>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
            @foreach (var emp in Model.Employees)
            {
                <tr>
                    <td>@emp.ID</td>
                    <td>@emp.Name</td>
                    <td>@emp.Designation</td>
                    <td>@emp.Salary</td>
                    <td>
                        @Html.ActionLink("Edit", "EditEmployee", "Home", new { id = emp.ID }, null)
                        &nbsp;&nbsp;
                        @Html.ActionLink("Delete", "DeleteEmployee", "Home", new { id = emp.ID }, null)
                    </td>
                </tr>
            }
        </table>
    }

    <div>
        @Html.ActionLink("BACK", "Index")
    </div>
</body>
</html>
